<?xml version="1.0" encoding="utf-8"?>
<com.amrendra.popularmovies.app.views.TitleTaglineView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.amrendra.popularmovies.app.views.MovieTitleTextView
        android:id="@+id/header_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/movie_title_text_size"/>

    <com.amrendra.popularmovies.app.views.MovieTaglineTextView
        android:id="@+id/header_view_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/movie_subtitle_text_size"/>

</com.amrendra.popularmovies.app.views.TitleTaglineView>