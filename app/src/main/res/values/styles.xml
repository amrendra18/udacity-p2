<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.DetailActivity" parent="AppTheme">
    </style>

    <style name="PlayCard" parent="android:Widget">
        <item name="android:layout_marginTop">@dimen/detail_card_view_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/detail_card_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/detail_card_view_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/detail_card_view_margin_bottom</item>
        <item name="android:padding">@dimen/detail_card_view_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/detail_card_view_text_content_padding</item>
    </style>

    <style name="CardTitleHeading" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardContent" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:spacing">2dp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:padding">@dimen/detail_card_view_text_content_padding</item>
    </style>

    <style name="FillContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TableEntryHead" parent="TableEntry">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/movie_detail_head_overview_text_size</item>
    </style>

    <style name="TableEntryRow" parent="TableEntry">
        <item name="android:textSize">@dimen/movie_detail_row_overview_text_size</item>
    </style>
</resources>
